{{ use('frontend/widgets/SLinkPager') }}
<section class="breadcrumbs_reviews_page">
    <div class="container">
         <ul class="bread_list" itemscope itemtype="https://schema.org/BreadcrumbList">
            <li class="item" itemprop="itemListElement" itemscope
			    itemtype="http://schema.org/ListItem">
                <a itemprop="item" href="{{ Url.home() }}" class="link"><span itemprop="name" >{{ this.params.main }}</span></a>
				<meta itemprop="position" content="1" />
            </li>
            <li class="item">
                <span> / </span>
            </li>
            <li class="item" itemprop="itemListElement" itemscope
			    itemtype="http://schema.org/ListItem">
				<a itemprop="item"  class="link" ><span itemprop="name">{{ this.params.blog }}</span></a>
				<meta itemprop="position" content="2" />
            </li>

        </ul>
    </div>
</section>

<section class="blog_page">
 <div class="container">
     <h1 class="head_section">
         {{ Seo.get('h1') }}
     </h1>
     <div class="row">
{% for i, newses in news %}

        <div class="col-sm-6 col-md-4">

            <div class="thumbnail-blog">
                <a href="{{ newses.url }}" class="shares_name">
                 <img style="width: 100%; min-height: 280px; margin: 0" src="/images/news/{{ newses.id }}.1.b.jpg" class="lazy-img-in-src" data-src="/images/news/{{ newses.id }}.1.b.jpg" alt="{{ newses.info.title }}">
                </a>
                 <div class="caption">
                     <div style="text-align: center" class="col-lg-12 col-md-12 col-sm-12">
                         {#{{ newses.creation_time|date('d/m/Y') }}#}
                     </div>


                     <a href="{{ newses.url }}" class="shares_name">
                     <h2 style="text-align: center">{{ newses.info.title }}</h2>
                     </a>
                    <div style="text-align: center" class="col-lg-12 col-md-12 col-sm-12">
                        {{ newses.info.pre_text  }}
                    </div>
                     {% set tag = newses.tags_id|split(',') %}


                     <div style="text-align: left; margin-top: 5%" class="col-lg-12 col-md-12 col-sm-12">
                         {% for i,t in tags %}
                         <span style="text-align: left; padding: 2%;color: #ff7500;padding-top: 5%;">
                         {% if t.info.record_id == tag[0] or t.info.record_id == tag[1] or t.info.record_id == tag[2] or t.info.record_id == tag[3] or t.info.record_id == [tag[4]] %}
                         <a href="#" class="link  js-ajax-tags js-tag-{{ t.info.record_id }}" data-id="{{ t.info.record_id }}">
                         {{t.info.title}}
                         </a>
                         {% endif %}
                     </span>
                         {% endfor %}
                     </div>

                 </div>
            </div>

        </div>


{% endfor %}

 </div>
     <div class="pagination_block">

         {{ s_link_pager_widget({
             'pagination' : pages,
             'maxButtonCount' : 3,
             'options' : {
                 'class' : 'pagination_list',
             },
             'linkOptions' : {
                 'class' : 'list_item',

             },
         }) }}



     </div>
</div>

</section>